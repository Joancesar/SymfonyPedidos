{% extends 'base.html.twig' %}

{% block title %}Crear cuenta{% endblock %}

{% block body %}

    <div class="container my-5 d-flex justify-content-center">
        <div class="bg-light p-5 shadow-lg rounded">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="text-center mb-4">Crea tu cuenta</h1>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-success btn-block">Crear cuenta</button>
            {{ form_end(registrationForm) }}
            <hr>
            <span>
                ¿Ya tiene una cuenta?
                <a href="{{ path('app_login') }}">Iniciar sesión</a>
            </span>
        </div>
    </div>

{% endblock %}
